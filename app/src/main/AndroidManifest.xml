<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tennis.cli.tenn.custm.tennisapp">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- to see if i can access google Play services or not -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.tennis.cli.tenn.custm.tennisapp.Application.TennisApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:hardwareAccelerated="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TennisApp_no"
        tools:targetApi="31">
        <activity
            android:name="com.tennis.cli.tenn.custm.tennisapp.Activities.ForgetPassActivity"
            android:exported="false" />
        <activity
            android:name="com.tennis.cli.tenn.custm.tennisapp.Activities.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.tennis.cli.tenn.custm.tennisapp.Activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.tennis.cli.tenn.custm.tennisapp.Activities.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.TennisApp_no.NoActionBar" />
        <activity
            android:name="com.tennis.cli.tenn.custm.tennisapp.Activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>