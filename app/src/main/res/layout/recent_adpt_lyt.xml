<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:id="@+id/main_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/white_trans"
    app:cardCornerRadius="@dimen/_14sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="Tournament: "
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tournament_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="ITF Australia Men Singles"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_txt"
            app:layout_constraintTop_toTopOf="@+id/name_txt" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/country_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="Country: "
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/name_txt"
            app:layout_constraintTop_toBottomOf="@id/tournament_name"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/country_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Australia"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/country_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/country_txt"
            app:layout_constraintTop_toTopOf="@id/country_txt" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="City: "
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/name_txt"
            app:layout_constraintTop_toBottomOf="@id/country_txt" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Australia"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@id/city_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/city_txt"
            app:layout_constraintTop_toTopOf="@id/city_txt" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/team_or_plyr_one_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="Player 1: "
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/name_txt"
            app:layout_constraintTop_toBottomOf="@id/city_txt" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/players_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fancut Thomas"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@id/team_or_plyr_one_txt"
            app:layout_constraintBottom_toBottomOf="@id/team_or_plyr_one_txt"
            app:layout_constraintTop_toTopOf="@id/team_or_plyr_one_txt" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/team_or_plyr_two_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="Player 2: "
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/name_txt"
            app:layout_constraintTop_toBottomOf="@id/team_or_plyr_one_txt" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/players_two_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fancut Thomas"
            android:textColor="@color/orange_def"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@id/team_or_plyr_two_txt"
            app:layout_constraintBottom_toBottomOf="@id/team_or_plyr_two_txt"
            app:layout_constraintTop_toTopOf="@id/team_or_plyr_two_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/round_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6sdp"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="Round: "
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/name_txt"
            app:layout_constraintTop_toBottomOf="@id/team_or_plyr_two_txt" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/round_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semifinal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@id/round_txt"
            app:layout_constraintBottom_toBottomOf="@id/round_txt"
            app:layout_constraintTop_toTopOf="@id/round_txt" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
